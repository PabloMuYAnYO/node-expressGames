<%- include('./partials/header.ejs') %>
<body>
<%- include('./partials/nav/navigation.ejs') %>
<section id="principal" class="contaniner h-100 d-flex justify-content-center align-items-center flex-column">
    <h2 class="text-center">Add a new Game!</h2>
    <div class="w-50 p-3 bg-secondary">
        <form method="POST" action="/addgames/insertar" class="w-100">
            <div class="form-group">
              <label class="text-white" for="exampleInputTitle1">Game Title</label>
              <input type="text" class="form-control" id="exampleInputTitle" placeholder="Enter title" name="titulo">
            </div>
            <div class="form-group">
                <label class="text-white" for="exampleInputAuthor1">Distributors</label>
                <input type="text" class="form-control" id="exampleInputAuthor" placeholder="Enter the distributors" name="distribuidor">
              </div>
            <div class="form-group">
                <label class="text-white" for="exampleInputImage1">Image</label>
                <input type="text" class="form-control" id="exampleInputImage" aria-describedby="imageHelp" placeholder="Enter image URL" name="imagen">
                <small id="imageHelp" class="form-text text-white">‚ùóPlease, make sure the image url works</small>
            </div>
            <div class="form-group">
                <label class="text-white" for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" maxlength="240" aria-describedby="textareaHelp" placeholder="Short description (maxChar*236)" name="descripcion"></textarea>
                <small id="textareaHelp" class="form-text text-white">Check it <a class="text-white" href="https://www.charactercountonline.com/"><strong>here</strong></a>.</small>
            </div>
            <button type="submit" class="btn btn-primary px-3">Submit</button>
          </form>
    </div>
</section>
</body>
